/**/
ul, ol {
                list-style:none;
            }
            
            .nav {
                width:500px; /*Le establecemos un ancho*/
               /* margin:0 auto; /*Centramos automaticamente*/
            }
 
            .nav > li {
                float:left;
            }
            
            .nav li a {
                background-color:#000;
                color:#fff;
                text-decoration:none;
                padding:10px 12px;
                display:block;
            }
            
            /*desplegables*/
            .nav ul li a {
                background-color:#000;
                color:#fff;
                text-decoration:none;
                padding:10px 12px;
                display:block;
                background-color: #4CAF50;
            }

            ul.nav ul li a ul li a{
                display:block;
            }
            
            .nav li a:hover {
                background-color:#434343;
            }
            
            .nav li ul {
                display:none;
                position:absolute;
                min-width:255px;/*140*/
            }
            
            .nav li:hover > ul {
                display:block;
            }
            
            .nav li ul li {
                position:relative;
            }
            
            .nav li ul li ul {
                right:-255px;/*-140*/
                top:0px;
            }

